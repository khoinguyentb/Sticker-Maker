<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".ui.fragment.SettingEditTextFragment">

    <ImageView
        android:id="@+id/ic_Close"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/ic_close_"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ic_TypeFace"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/ic_type"
        app:layout_constraintStart_toEndOf="@id/ic_Close"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ic_Theme"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/ic_theme_un"
        app:layout_constraintStart_toEndOf="@id/ic_TypeFace"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ic_Stick"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/ic_stick_un"
        app:layout_constraintStart_toEndOf="@id/ic_Theme"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ic_Done"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/ic_done_"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerThickness="1dp"
        app:layout_constraintTop_toBottomOf="@id/ic_Close"
        app:dividerColor="#CBCBCB"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/bg_type_face"
        app:layout_constraintTop_toBottomOf="@id/ic_Close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:weightSum="2">

        <TextView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:text="@string/Align"
            android:paddingVertical="@dimen/_5sdp"
            android:gravity="center"/>
        <TextView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:text="@string/Align"
            android:paddingVertical="@dimen/_5sdp"
            android:gravity="center"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>