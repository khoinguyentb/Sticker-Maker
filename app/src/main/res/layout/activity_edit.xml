<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CACACA"
    tools:context=".ui.activity.EditActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_20sdp"
        android:weightSum="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/icBack"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="39dp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_weight="0.5"
            android:src="@drawable/ic_back"
            android:tint="@color/black"
            tools:ignore="UseAppTint" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/icBack"
            android:layout_alignBottom="@+id/icBack"
            android:layout_toEndOf="@id/icBack"
            android:layout_weight="7"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/Edit"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp" />


        <TextView
            android:id="@+id/bntNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignParentEnd="true"
            android:layout_weight="2.5"
            android:background="@drawable/bg_next"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_15sdp"
            android:src="@drawable/version"
            android:text="@string/Create"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_30sdp"
            android:weightSum="2">

            <ImageView
                android:id="@+id/img_preview"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/prview_edit_un"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/img_next"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/next_edit_un"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"/>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/Text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="Suspicious0dp">

            <ImageView
                android:id="@+id/icText"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_text" />

            <TextView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@string/Text"
                android:textColor="@color/gray939393" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Sticker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="Suspicious0dp">

            <ImageView
                android:id="@+id/icSticker"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_sticker" />

            <TextView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@string/Sticker"
                android:textColor="@color/gray939393" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Effect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="Suspicious0dp">

            <ImageView
                android:id="@+id/icEffect"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_effect" />

            <TextView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@string/Effect"
                android:textColor="@color/gray939393" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Border"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="Suspicious0dp">

            <ImageView
                android:id="@+id/icBorder"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_border" />

            <TextView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@string/Border"
                android:textColor="@color/gray939393" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/textStickers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <com.kan.dev.st051_stickermaker.utils.StrokeTextView
            android:id="@+id/tvSticker"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:gravity="center"
            android:text="@string/DIYSticker"
            android:textSize="@dimen/_22sdp"
            android:textColor="@color/white"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_transfer"
        app:layout_constraintBottom_toTopOf="@+id/layoutText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <LinearLayout
            android:id="@+id/lineSticker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" >
            <ImageView
                android:id="@+id/imgSticker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_250sdp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/test"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.kan.dev.st051_stickermaker.utils.stickerview.CustomSticker
            android:id="@+id/stickerView"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="@dimen/_10sdp"
            app:borderColor="@color/blue7DD3D2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:showBorder="true"
            app:showIcons="true" />

        <com.kan.dev.st051_stickermaker.utils.DrawingView
            android:id="@+id/drawView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:visibility="invisible"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        tools:ignore="DuplicateIds">

        <ImageView
            android:id="@+id/ic_Close"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/ic_close_"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/ic_TypeFace"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/ic_type"
            app:layout_constraintStart_toEndOf="@id/ic_Close"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ic_Theme"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/ic_theme_un"
            app:layout_constraintStart_toEndOf="@id/ic_TypeFace"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ic_Stick"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:visibility="invisible"
            android:src="@drawable/ic_stick_un"
            app:layout_constraintStart_toEndOf="@id/ic_Theme"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ic_Done"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/ic_done_"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/materialDivider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dividerColor="#CBCBCB"
            app:dividerThickness="1dp"
            app:layout_constraintTop_toBottomOf="@id/ic_Close" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutAlignText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ic_Stick">

            <LinearLayout
                android:id="@+id/layoutTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/bg_type_face"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/btnAlign"
                    style="@style/roboto13"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_selector_font"
                    android:gravity="center"
                    android:paddingVertical="@dimen/_5sdp"
                    android:text="@string/Align"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/btnFont"
                    style="@style/roboto13"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/gray949494"
                    android:paddingVertical="@dimen/_5sdp"
                    android:text="@string/Font" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvLayoutFont"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:background="@color/white"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_5sdp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutTitle"
                app:spanCount="3"
                tools:listitem="@layout/item_font"/>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/layoutAlign"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutTitle">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tvAlignment"
                            style="@style/roboto13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="@string/Alignment"
                            android:textColor="#111111"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:id="@+id/linearLayout5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:weightSum="3"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvAlignment">

                            <ImageView
                                android:id="@+id/icAlignLeft"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:src="@drawable/alignment_left_un" />

                            <ImageView
                                android:id="@+id/icAlignCenter"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:backgroundTint="@color/transfers"
                                android:src="@drawable/alignment_center" />

                            <ImageView
                                android:id="@+id/icAlignRight"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:src="@drawable/alignment_right_un" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvTextShadow"
                            style="@style/roboto13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:text="@string/TextShadow"
                            android:textColor="#111111"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:id="@+id/layoutShadow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:orientation="horizontal"
                            android:weightSum="3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvAlignment">

                            <ImageView
                                android:id="@+id/icShadow1"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:src="@drawable/text_shadow_1" />

                            <ImageView
                                android:id="@+id/icShadow2"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:backgroundTint="@color/transfers"
                                android:src="@drawable/text_shadow_2" />

                            <ImageView
                                android:id="@+id/icShadow3"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:src="@drawable/text_shadow_3" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvDecoration"
                            style="@style/roboto13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="@string/Decoration"
                            android:textColor="#111111"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/layoutShadow" />

                        <LinearLayout
                            android:id="@+id/layoutDecoration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:weightSum="5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvDecoration">

                            <ImageView
                                android:id="@+id/icNomarl"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:src="@drawable/normal" />

                            <ImageView
                                android:id="@+id/icBold"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:backgroundTint="@color/transfers"
                                android:src="@drawable/bold_un" />

                            <ImageView
                                android:id="@+id/icItalic"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:backgroundTint="@color/transfers"
                                android:src="@drawable/italic_un" />

                            <ImageView
                                android:id="@+id/icStrikethrough"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:backgroundTint="@color/transfers"
                                android:src="@drawable/strikethrough_un" />

                            <ImageView
                                android:id="@+id/icUnderlined"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:src="@drawable/underlined_un" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvCase"
                            style="@style/roboto13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="@string/Case"
                            android:textColor="#111111"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/layoutDecoration" />

                        <LinearLayout
                            android:id="@+id/layoutCase"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:weightSum="4"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvCase">

                            <ImageView
                                android:id="@+id/icNormalCase"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:src="@drawable/normal" />

                            <ImageView
                                android:id="@+id/icAA"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:backgroundTint="@color/transfers"
                                android:src="@drawable/aa_uppercase_un" />

                            <ImageView
                                android:id="@+id/icAa"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:backgroundTint="@color/transfers"
                                android:src="@drawable/a_uppercase_un" />

                            <ImageView
                                android:id="@+id/icaa"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:backgroundTint="@color/transfers"
                                android:src="@drawable/aa_lowercase_un" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/icFontHeight"
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:src="@drawable/ic_font_height"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/layoutCase" />

                        <SeekBar
                            android:id="@+id/seekBarHeight"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:maxHeight="5dp"
                            android:progress="50"
                            android:progressDrawable="@drawable/custom_seekbar"
                            android:splitTrack="false"
                            android:thumb="@drawable/shadow"
                            app:layout_constraintBottom_toBottomOf="@+id/icFontHeight"
                            app:layout_constraintEnd_toStartOf="@+id/tvPercentHeight"
                            app:layout_constraintStart_toEndOf="@+id/icFontHeight"
                            app:layout_constraintTop_toBottomOf="@id/layoutCase"
                            app:layout_constraintTop_toTopOf="@id/icFontHeight" />

                        <ImageView
                            android:id="@+id/icFontWeight"
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:src="@drawable/ic_font_weight"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/icFontHeight" />

                        <SeekBar
                            android:id="@+id/seekBarWeight"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:maxHeight="5dp"
                            android:progress="50"
                            android:progressDrawable="@drawable/custom_seekbar"
                            android:splitTrack="false"
                            android:thumb="@drawable/shadow"
                            app:layout_constraintBottom_toBottomOf="@+id/icFontWeight"
                            app:layout_constraintEnd_toStartOf="@+id/tvPercentWeight"
                            app:layout_constraintStart_toEndOf="@+id/icFontWeight"
                            app:layout_constraintTop_toBottomOf="@id/layoutCase"
                            app:layout_constraintTop_toTopOf="@id/icFontWeight" />

                        <TextView
                            android:id="@+id/tvPercentHeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:text="100"
                            android:textColor="@color/blue7DD3D2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/layoutCase" />

                        <TextView
                            android:id="@+id/tvPercentWeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:text="100"
                            android:textColor="@color/blue7DD3D2"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvPercentHeight" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <include
            android:id="@+id/layoutPaint"
            layout="@layout/layout_paint"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialDivider"
            tools:ignore="IncludeLayoutParam" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvLayoutStick"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/materialDivider"
            app:spanCount="4"
            tools:listitem="@layout/item_stick" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/layoutSticker"
        layout="@layout/layout_sticker"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>